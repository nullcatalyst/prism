_DEFAULT = "//conditions:default"

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "sdl2",
    visibility = ["//visibility:public"],
    deps = select({
        _PLATFORM_WINDOWS: [":sdl2_windows"],
        _PLATFORM_MACOS: [":sdl2_macos"],
        _PLATFORM_IOS: [":sdl2_ios"],
        _DEFAULT: [],
    }),
)

